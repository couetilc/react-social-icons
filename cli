#!/usr/bin/env bash

build() {
  # why do I transpile? can I test my desired outcome?
  pnpm rollup -c rollup.config.js "$@"
}

dev() {
  # TODO make sure the examples page is working. I should rename the directory.
  pnpm vite
}

info:bundlesize() {
 build
 tar -c dist | gzip > dist.tar.gz
 du -h dist dist.tar.gz
 rm dist.tar.gz
}

test:lint() {
  pnpm eslint .eslintrc.cjs .
}

test:publint() {
  build --silent
  pnpm publint .
}

test:ts() {
  pnpm tsc
}

test:unit() {
  build --silent
  pnpm vitest test/unit/*.test.js "$@"
}

test:codesplitting() {
  build --silent
  ./test/codesplitting.sh
}

test:() {
  set -e

  test:lint;
  test:publint;
  test:ts;
  test:unit --run --silent;
  test:codesplitting;

  echo
  echo Passed All Tests

  set +e
}

"$@"
